= simple_form_for [:administration, @product] do |f|
  = f.error_notification
  = f.input :category_id, collection: Category.where.not(category_id: nil)
  = f.input :manufacturer_id, collection: Manufacturer.all
  = f.input :name
  = f.input :material
  = f.input :volume
  = f.input :width
  = f.input :height
  = f.input :depth
  = f.input :color, collection: Product.colors.keys
  = f.input :cost

  - unless action_name == 'edit'
    = f.simple_fields_for :assets do |p|
      = p.input :image, as: :file
    = f.simple_fields_for :assets do |p|
      = p.input :image, as: :file
    = f.simple_fields_for :assets do |p|
      = p.input :image, as: :file

  = f.input :description, as: :text, input_html: { class: 'textarea' }

  = f.button :submit
