<header class="main-header">
    <div class="main-header_top-row">
        <div class="wrapper main-header_top-row_wrapper">
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <div class="contact-item main-header_phone-item main-header_phone-text"><%= I18n.t('front.round_dur') %>:</div>
                    <a class="main-header_phone-item main-header_phone-link" href="tel:121356"><span class="main-header_phone-link_code">0 (800)</span> 300-24-12</a>
                </div>
                <div class="col-xs-12 col-sm-6">
                    <a class="contact-item contact-mail contact-mail--header" href="#" data-feedback-popup><%= I18n.t('front.write_us')%></a>
                    <ul class="main-header_lang-list">
                        <li class="main-header_lang-list_item">
                            <a class="main-header_lang-list_item_link main-header_lang-list_item_link--active" href="/lang/ua">Укр <span class="triangle"></span></a>
                        </li>
                        <li class="main-header_lang-list_item"><a class="main-header_lang-list_item_link" href="/lang/ru">Рус</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="main-header_bottom-row">
        <div class="row">
            <div class="wrapper">
                <div class="col-md-3">
                    <a href="/" class="main-header_logo">
                        <%= image_tag('logo.png', size: '49x68', alt: 'Made in Ukraine', class: 'main-header_logo_img') %>
                        <h1 class="main-header_logo_text">Made in Ukraine</h1>
                    </a>
                </div>
                <div class="col-md-6">
                    <nav class="nav nav--header" role="navigation">
                        <ul class="nav_list nav_list--header">
                            <li class="nav_list_item"><a href="#" data-dropdown="#dropdown-1" class="nav_list_item_link nav_list_item_link--header" data-dropdown-toggle>
                                Каталог <span class="triangle"></span></a>
                                <div class="dropdown_content">
                                    <div class="wrapper dropdown_content_wrapper">
                                        <div class="row">
                                            <div class="col-sm-6">
                                               <%- menu_categories.each_with_index do |category, index|%>
                                                  <% if index + 1 >= menu_categories.count / 2 %>
                                                    <div class="col-xs-6">
                                                        <div class="dropdown_item">
                                                            <div class="dropdown_item_cell dropdown_item_icon-wrapper dropdown_item_icon-wrapper--blue">
                                                                <i class="dropdown_item_icon dropdown_item_icon--<%= index + 1 %>"></i>
                                                            </div>
                                                            <%= link_to category.name, products_path(:category => category.slug), class: 'dropdown_item_cell dropdown_item_link' %>
                                                        </div>
                                                    </div>
                                                  <% end %>
                                                <% end %>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="dropdown_right-column">
                                                   <%- menu_categories.each_with_index do |category, index|%>
                                                      <% if index + 1 < menu_categories.count / 2 %>
                                                        <div class="col-xs-6">
                                                            <div class="dropdown_item">
                                                                <div class="dropdown_item_cell dropdown_item_icon-wrapper dropdown_item_icon-wrapper--red">
                                                                    <i class="dropdown_item_icon dropdown_item_icon--3"></i>
                                                                </div>
                                                                <%= link_to category.name, products_path(:category => category.slug), class: 'dropdown_item_cell dropdown_item_link' %>
                                                            </div>
                                                        </div>
                                                      <% end %>
                                                    <% end %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li class="nav_list_item"><a href="#" class="nav_list_item_link nav_list_item_link--header"><%= I18n.t('front.news') %></a></li>
                            <li class="nav_list_item"><a href="#" class="nav_list_item_link nav_list_item_link--header">Блог</a></li>
                            <li class="nav_list_item"><a href="#" class="nav_list_item_link nav_list_item_link--header">Про проект</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-md-3">
                    <form class="main-header_search" action='/search'>
                        <label class="sr-text">Пошук</label>
                        <input type="text" name="search" class="main-header_search_input">
                        <input type="submit" class="main-header_search_submit" value="">
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>
